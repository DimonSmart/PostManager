@inherits LayoutComponentBase
@inject TenantState TenantState

<PageTitle>PostManager</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="app-title">
                <strong>PostManager</strong>
                @if (!string.IsNullOrWhiteSpace(TenantState.TenantName))
                {
                    <span class="tenant-pill">@TenantState.TenantName</span>
                }
            </div>
            <div>
                <NavLink class="btn btn-link" href="/tenants">Switch tenant</NavLink>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
